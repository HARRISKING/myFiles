@media screen and (max-width:770px){
  .hide-ele{
    display: none !important;
  }
  .right-del{
  	float: none !important;
  }
  .media-input{
  	display: inline;
  	margin-bottom: 15px;
  }
  .right-del>.checkbox{
  	display: inline-block;
  }
  .col-edit a {
  	margin-right: 50px !important;
  }
}

@media screen and (min-width: 768px){
	.form-inline .form-control{
		vertical-align: top;
	}
}

.panel-heading a,tbody tr td span a {
	color: #000;
}

.right-del {
	float: right;
}

.right-del .checkbox {
	margin-right: 7px;
	letter-spacing: 1px;
}

.right-del .checkbox>input {
	margin-right: 3px;
}

.col-width {
	width: 13.33%;
	text-align: center;
	color:#2268A3;
}

input.check-serve {
	margin: 0 7px;
}

.exchange-content {
	display: none;
	width: 60%;
}

.exchange-content+span {
	display: inline-block;
	width: 60%;
}

.col-edit {
	display: inline-block;
	margin-left: 20px;
}
.col-edit a {
	margin-right: 80px;
}